<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Enrollment Form</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <h1>Enrollment Form</h1>
    
    <form action="/enroll" method="POST">
        <table class="table">
            <tr>
                <td>Course</td>
                <td>
                    <select name="course_code" class="form-select" required>
                        {{#courses}}
                        <option value="{{course_code}}">{{course_name}}</option>
                        {{/courses}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Student</td>
                <td>
                    <select name="student_code" class="form-select" required>
                        {{#students}}
                        <option value="{{student_code}}">{{first_name}} {{last_name}}</option>
                        {{/students}}
                    </select>
                </td>
            </tr>
            <tr>
                <td>Enrollment Date</td>
                <td>
                    <input type="date" name="enrollment_date" class="form-control" required>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <input type="submit" value="Enroll Student" class="btn btn-primary">
                </td>
            </tr>
        </table>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <hr />
    <li><a href="/courses">List of courses</a></li>
    <li><a href="/students">List of students</a></li>

</body>
</html>