<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ course.course_name }}</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>

    <h1>{{ course.course_code }}</h1>
    <h2 style="color:red">{{ course.course_name }}</h2>
    <p><strong>Description:</strong> {{ course.description }}</p>
    <p><strong>Credits:</strong> {{ course.credits }}</p>

    <h3>Enrolled Students</h3>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>#</th>
                <th>Student Code</th>
                <th>Student Name</th>
                <th>Enrollment Date</th>
                <th>Grade</th>
            </tr>
        </thead>
        <tbody>
            {{#enrollees}}
            <tr>
                <td>{{@index}}</td>
                <td>{{student_code}}</td>
                <td>{{name}}</td>
                <td>{{enrolment_date}}</td>
                <td>{{grade}}</td>
            </tr>
            {{/enrollees}}
            {{^enrollees}}
            <tr>
                <td colspan="5" class="text-center">No students enrolled in this course.</td>
            </tr>
            {{/enrollees}}
        </tbody>
    </table>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <hr />
    <nav>
        <ul>
            <li><a href="/courses">List of courses</a></li>
            <li><a href="/students">List of students</a></li>
        </ul>
    </nav>

</body>
</html>
